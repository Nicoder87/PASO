@model Escrutinio.Models.PostulacionEditModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    //@Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ORID)
    @Html.HiddenFor(model => model.LISTA)
    @Html.HiddenFor(model => model.CARGO)

    <section class="content-header">
        <h2 class="box-title">MODIFICAR POSTULACIÓN</h2>
    </section>

    <section class="container">

        <div class="row">

            @*@Html.ValidationSummary(true)*@

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.NOMBRE)
                @Html.TextBoxFor(model => model.NOMBRE, null, new { @class = "form-control", @maxlength = "200" })
                @Html.ValidationMessageFor(model => model.NOMBRE)
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.APELLIDO)
                @Html.TextBoxFor(model => model.APELLIDO, null, new { @class = "form-control", @maxlength = "200" })
                @Html.ValidationMessageFor(model => model.APELLIDO)
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    <input type="submit" value="Modificar" class="btn btn-default" />
                </div>
                <div class="col-md-6">
                    @Html.ActionLink("VOLVER", "Index")
                </div>

            </div>

        </div>

    </section>
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

}
